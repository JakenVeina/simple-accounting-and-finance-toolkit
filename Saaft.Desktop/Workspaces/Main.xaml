<UserControl
        x:Class="Saaft.Desktop.Workspaces.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Behaviors="clr-namespace:Saaft.Desktop.Behaviors"
        xmlns:Workspaces="clr-namespace:Saaft.Desktop.Workspaces"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=Workspaces:MainModel}">
    
    <b:Interaction.Behaviors>
        <Behaviors:LaunchWorkspaceBehavior Command="{x:Static Workspaces:Commands.Interrupt}"/>
    </b:Interaction.Behaviors>
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Command="{Binding NewFileCommand}"/>
            </MenuItem>
        </Menu>
        
        <ContentControl Content="{Binding File.Value}"/>
    </DockPanel>

</UserControl>
